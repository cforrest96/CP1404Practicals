BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            on_text: app.convert_miles()

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3

            Button:
                text: 'Up'
                on_press: app.do_increment(1)
            Button:
                text: 'Down'
                on_press: app.do_increment(-1)


    BoxLayout:
        Label:
            id: output_label
            text: '54.717'
